<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/font_app_bold</item>
        <item name="android:textSize">@dimen/textTitle</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textDescription">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/font_app</item>
        <item name="android:textSize">@dimen/textDescription</item>
        <item name="android:textColor">@color/colorGrayMedium</item>
    </style>

    <style name="textButtonPeriod">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/font_app</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textButtonPeriod</item>
    </style>

    <style name="textSearch">
        <item name="android:textSize">@dimen/textButtonPeriod</item>
        <item name="android:fontFamily">@string/app_name</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="black">#000000</color>
</resources>
